			<li Class="CombatExtended.PatchOperationFindMod">
                 <!--must be changed to the mods' name in about.xml-->
				<modName>TMC Armory - Shotguns #1</modName>
			</li>
             <!--here just change the defname to the gun's defname-->
            <li Class="PatchOperationReplace">
                <xpath>Defs/ThingDef[defName="Gun_TMC_ISG_Cleaner"]/verbs/li/verbClass</xpath>
